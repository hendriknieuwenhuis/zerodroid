<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hendriknieuwenhuis.zerodroid.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pR"
        android:id="@+id/previousButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:nestedScrollingEnabled="true"
        android:hint="previous"
        android:onClick="buttonClicked"
        android:textStyle="normal|italic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pA"
        android:id="@+id/pauseButton"
        android:layout_alignTop="@+id/previousButton"
        android:layout_toRightOf="@+id/previousButton"
        android:layout_toEndOf="@+id/previousButton"
        android:hint="pause"
        android:clickable="true"
        android:onClick="buttonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nE"
        android:id="@+id/nextButton"
        android:layout_alignTop="@+id/pauseButton"
        android:layout_toRightOf="@+id/pauseButton"
        android:layout_toEndOf="@+id/pauseButton"
        android:hint="next"
        android:clickable="true"
        android:onClick="buttonClicked" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"

        android:layout_below="@+id/previousButton"
        android:layout_toStartOf="@+id/nextButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toLeftOf="@+id/nextButton" />

</RelativeLayout>
